[general]
accounts = Hobby,Personal
maxsynaccounts = 2
ui = ttyui
socktimeout = 60

[Account Hobby]
localrepository = Hobby-Local
remoterepository = Hobby-Remote
autorefresh = 2
quick = 5

[Repository Hobby-Local]
type = Maildir
localfolders = ~/Mail/Hobby

[Repository Hobby-Remote]
type = Gmail
remoteusereval = get_keepass("user", group_name="Mail", title="Hobby")
remotepasseval = get_keepass("app_pass", group_name="Mail", title="Hobby")
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
realdelete = no
maxconnections = 3
holdconnectionopen = yes

[Account Personal]
localrepository = Personal-Local
remoterepository = Personal-Remote
autorefresh = 2
quick = 5

[Repository Personal-Local]
type = Maildir
localfolders = ~/Mail/Personal

[Repository Personal-Remote]
type = Gmail
remoteusereval = get_keepass("user", group_name="Mail", title="Personal")
remotepasseval = get_keepass("app_pass", group_name="Mail", title="Personal")
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
realdelete = no
maxconnections = 3
holdconnectionopen = yes

[mbnames]
enabled = yes
filename = ~/.mutt/mailboxes
header = "mailboxes "
peritem = "+%(accountname)s/%(foldername)s"
sep = " "
footer = "\n"
